@model IEnumerable<TritonExpress.Models.TritonExpressWaybill>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"> @Html.DisplayNameFor(model => model.RecipientName)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cell)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Date)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WayBillInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WayBillweight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfParcels)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecipientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WayBillInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WayBillweight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfParcels)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.wayBillID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.wayBillID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.wayBillID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
