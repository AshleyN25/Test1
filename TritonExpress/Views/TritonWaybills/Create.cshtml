@model TritonExpress.Models.TritonWaybill

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TritonWaybill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehicleID" class="control-label"></label>
                <select asp-for="VehicleID"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.ListOfVehicle, "ID","vehiclereg"))"></select>
                <span asp-validation-for="VehicleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WayBillInfo" class="control-label"></label>
                <input asp-for="WayBillInfo" class="form-control" />
                <span asp-validation-for="WayBillInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WauBillweight" class="control-label"></label>
                <input asp-for="WauBillweight" class="form-control" />
                <span asp-validation-for="WauBillweight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfParcels" class="control-label"></label>
                <input asp-for="NumberOfParcels" class="form-control" />
                <span asp-validation-for="NumberOfParcels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
